pipeline {
    agent {
        docker {
            image 'node:6-alpine' 
            args '-p 3000:3000' 
        }
    }
    
    stages {
        stage('Clone git') {
          steps {
            git 'https://github.com/cmelgreen/PersonalSite'
          }
        }
        stages {
            stage('Build') { 
                steps {
                    sh 'npm install' 
                    sh 'npm run build'
                }
            }
        }
    }
}